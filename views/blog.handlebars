<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-desc">Content:</label>
        <textarea
          class="form-input"
          id="comment-desc"
          name="comment-desc"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  <div class="col-md-6 comment-list">
    {{#if comments.length}}
      <h3>Current Comments:</h3>
      {{#each comments as |comment|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/comment/{{comment.id}}">{{comment.content}}</a></h4>
            <h6>Comment by: {{comment.user.name}}</h6>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{comment.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
</div>

<script src="/js/comment.js"></script>